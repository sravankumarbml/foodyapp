<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/instantfood1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginHorizontal="30dp"
        android:elevation="10dp"
        android:background="@drawable/instantfood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/loading" />

        <TextView
            android:id="@+id/categorytext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/imageView"

            android:ellipsize="end"
            android:maxLines="1"
            android:text="Instant veg noodles"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/categorytext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categorytext1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/imageView"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Priyaâ€™s limited company"
            android:textSize="15sp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/instantgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categorytext2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/imageView"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="199"
                android:textStyle="bold"
                android:id="@+id/popularfoodPrice"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="/kg"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/popularfoodrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/icon1"
                android:text="4.8"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="10dp"
                android:src="@drawable/star" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_alignStart="@id/imageView"
            android:layout_marginStart="27dp"
            android:layout_marginTop="-12dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/valueTextplus"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/yellowshade"
                android:gravity="center"
                android:text="+"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/valueText"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:text="0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/valueTextminus"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/yellowshade"
                android:gravity="center"
                android:text="-" />

        </LinearLayout>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>