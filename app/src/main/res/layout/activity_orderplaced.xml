<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderplacedActivity">

    <ImageView
        android:id="@+id/placedimage"
        android:layout_width="268dp"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@drawable/orderplaced"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="1.0"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.389"
        app:layout_constraintWidth_percent="1.0" />

    <TextView
        android:id="@+id/placedlarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:text="Order Placed!!"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/placedimage" />

    <TextView
        android:id="@+id/placedsmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Tracking ID: #190103"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/placedlarge" />

    <LinearLayout
        android:id="@+id/placedbtns"
        android:layout_width="417dp"
        android:layout_height="119dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="76dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placedsmall">


        <TextView
            android:id="@+id/button0"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:layout_marginEnd="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/placedbuttonfilled"
            android:text="Orders"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/caption"
            tools:layout_editor_absoluteX="44dp" />

        <TextView
            android:id="@+id/button1"
            android:layout_width="172dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/placedbutton"
            android:text="Restaurants"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/caption"
            tools:layout_editor_absoluteX="24dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>