<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ItemviewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
        android:id="@+id/viewicon1"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/backarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel The Grand"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.365"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewicon1" />


    <ImageView
        android:id="@+id/largeImage"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/itemviewimage"
        app:layout_constraintTop_toBottomOf="@+id/viewicon1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        />

            <RelativeLayout
                android:id="@+id/Hotelfood1"
                android:layout_width="350dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toBottomOf="@id/largeImage"
                app:layout_constraintStart_toStartOf="@+id/largeImage"

                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/instanttext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Chicken Dum Biryani"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/instantgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/instanttext1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Hotelicon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="2dp"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/Hotelviewicon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="2dp"
                        android:src="@drawable/star" />
                    <ImageView
                        android:id="@+id/Hotelviewicon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="2dp"
                        android:src="@drawable/star" />
                    <ImageView
                        android:id="@+id/Hotelicon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="4dp"
                        android:src="@drawable/star" />

                    <TextView
                        android:id="@+id/Hotelfoodrating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/icon1"
                        android:text="4.0"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginTop="-10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="20 - 30 miniutes"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        android:layout_marginTop="-10dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/instantgroup"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="199/-"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/van" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free Delivery"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="23dp"
                    android:layout_toEndOf="@id/instanttext1"
                    android:orientation="horizontal"
                    android:paddingLeft="140dp">

                    <TextView
                        android:id="@+id/valueTextplus"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:background="@color/yellowshade"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/valueText"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/valueTextminus"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:background="@color/yellowshade"
                        android:gravity="center"
                        android:text="-" />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:text="The spices and condiments used in biryani may include fennel seeds, ghee. The premium of the varieties include saffron and spices."
                android:id="@+id/itemtext"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/Hotelfood1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
            </TextView>

            <TextView
                android:id="@+id/grocerydowntext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Ingredients"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.032"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemtext"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontal"
                app:layout_constraintTop_toBottomOf="@id/grocerydowntext4">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/buttonplus">


                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/oil"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="6dp" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/onions"
                        android:scaleType="fitXY"
                        android:layout_marginRight="6dp" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/chicken"
                        android:scaleType="fitXY"
                        android:layout_marginRight="6dp" />

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/rice"
                        android:scaleType="fitXY"
                        android:layout_marginRight="6dp" />

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/spices"
                        android:scaleType="fitXY"
                        android:layout_marginRight="6dp" />

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/horizontal"
                android:id="@+id/box1"
                android:text="Full pack"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/foodview"
                app:layout_editor_absoluteX="24dp"
                />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_check_circle_24"
                app:layout_constraintEnd_toEndOf="@id/box1"
                app:layout_constraintTop_toTopOf="@id/box1"
                app:layout_constraintBottom_toBottomOf="@id/box1"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/box1"
                android:id="@+id/box2"
                android:text="Half pack"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/foodview"
                app:layout_editor_absoluteX="24dp"
                />


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_radio_button_unchecked_24"
                app:layout_constraintEnd_toEndOf="@id/box2"
                app:layout_constraintTop_toTopOf="@id/box2"
                app:layout_constraintBottom_toBottomOf="@id/box2"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/box2"
                android:id="@+id/box4"

                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="20dp"
                android:layout_marginTop="45dp"
                />







        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/box3"
        android:text="Place Order"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="20dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:backgroundTint="@color/yellowshade"
        android:layout_marginTop="15dp"
        android:background="@drawable/foodview"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>